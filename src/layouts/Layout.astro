---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import TopNavigationBar from "@/components/layout/TopNavigationBar.astro";
// import Header from "@/components/layout/Header.astro"; // Assume not created yet
// import Footer from "@/components/layout/Footer.astro"; // Assume not created yet
import { Toaster } from "@/components/ui/sonner";
import MobileBottomNavigationBar from "@/components/layout/MobileBottomNavigationBar.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const user = Astro.locals.user;
const isAuthenticated = user !== null;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || "FiszkiES - Nauka hiszpaÅ„skiego przez generowanie fiszek"} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    data-is-authenticated={isAuthenticated.toString()}
    class="min-h-screen flex flex-col bg-background font-sans antialiased"
  >
    <TopNavigationBar />
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>
    <MobileBottomNavigationBar />
    {/* <Footer /> */}
    <Toaster richColors position="top-right" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
